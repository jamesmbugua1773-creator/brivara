# Root env file for production docker-compose
# Copy to .env and fill with real production values

# --- Database (PostgreSQL) ---
POSTGRES_DB=brivara_db
POSTGRES_USER=brivara_user
POSTGRES_PASSWORD=replace-with-strong-db-password

# --- Redis ---
REDIS_PASSWORD=replace-with-strong-redis-password

# --- Backend ---
NODE_ENV=production
PORT=4000
JWT_SECRET=replace-with-strong-jwt-secret
JWT_EXPIRES_IN=7d

# Public URLs
FRONTEND_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com
WEBSITE_URL=https://yourdomain.com

# Comma-separated allowed origins for CORS (set to your actual domains)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SMTP
SMTP_HOST=smtp.provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=replace-with-app-password
EMAIL_FROM=noreply@yourdomain.com

# Optional business settings
DEPOSIT_FEE_PERCENT=1.5
WITHDRAWAL_FEE_PERCENT=5
MIN_WITHDRAWAL=10
WITHDRAWAL_COOLDOWN_HOURS=24

# Optional external integrations
TATUM_API_KEY=
BSCSCAN_API_KEY=

# --- Frontend build/runtime ---
NEXT_PUBLIC_API_BASE=https://api.yourdomain.com/api
NEXT_PUBLIC_TRON_ADDRESS=TXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
NEXT_PUBLIC_BEP20_ADDRESS=0xXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
