# Backend production environment
# Copy to backend/.env in production deployments (or set via your hosting platform)

NODE_ENV=production
PORT=4000

# Database
DATABASE_URL=postgresql://brivara_user:replace-with-strong-db-password@localhost:5432/brivara_db
DIRECT_URL=${DATABASE_URL}

# Auth
JWT_SECRET=replace-with-strong-jwt-secret
JWT_EXPIRES_IN=7d

# CORS / URLs
FRONTEND_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com
WEBSITE_URL=https://yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email (SMTP)
SMTP_HOST=smtp.provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=replace-with-app-password
EMAIL_FROM=noreply@yourdomain.com

# Optional
REDIS_URL=redis://:replace-with-strong-redis-password@localhost:6379
LOG_LEVEL=info

# Fees and thresholds
DEPOSIT_FEE_PERCENT=1.5
WITHDRAWAL_FEE_PERCENT=5
MIN_WITHDRAWAL=10
WITHDRAWAL_COOLDOWN_HOURS=24
