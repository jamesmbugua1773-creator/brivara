# Backend env template for Supabase Postgres
# Copy to backend/.env and fill values. DO NOT COMMIT backend/.env

NODE_ENV=production
PORT=4000

# Supabase Postgres (TLS)
# Replace YOUR_PASSWORD with your Supabase DB password.
# NOTE: If your password contains special characters (e.g. #, @, :), URL-encode it.
#
# Recommended for app runtime (connection pooling): Transaction pooler
# (port 6543 + `pgbouncer=true` disables prepared statements)
DATABASE_URL="postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-1-YOUR_REGION.pooler.supabase.com:6543/postgres?pgbouncer=true&sslmode=require"

# Recommended for Prisma migrations: Session pooler or Direct connection
# Use the exact "Direct"/"Session pooler" string from Supabase dashboard.
DIRECT_URL="postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-1-YOUR_REGION.pooler.supabase.com:5432/postgres?sslmode=require"

# Security
JWT_SECRET="REPLACE_WITH_STRONG_64+_CHARS"
TRANSACTION_AUTH_SECRET="REPLACE_WITH_STRONG_64+_CHARS"
TRUST_PROXY=true

# CORS / URLs (set to your real frontend + api)
FRONTEND_URL="https://www.brivaracapital.com"
WEBSITE_URL="https://www.brivaracapital.com"
API_URL="https://api.brivaracapital.com/api"
CORS_ORIGINS="https://www.brivaracapital.com"

# Email (recommended: SendGrid/Mailgun/SES)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@brivaracapital.com

# Withdrawals (keep off until provider integration is configured)
WITHDRAWAL_PROCESS_ENABLED=false
WITHDRAWAL_PROVIDER_URL=
WITHDRAWAL_PROVIDER_SECRET=
